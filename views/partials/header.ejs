  <script>
      const toggle = document.getElementById("toggle");
      // Cek localStorage untuk mode gelap
      if (localStorage.getItem("darkmode") && localStorage.getItem("darkmode")==="true") {
        // Jika darkmode aktif, tambahkan kelas "dark" ke body dan ubah ikon toggle menjadi sun
        document.body.dataset.theme = "dark";
        toggle.innerHTML = '<i class="fas fa-sun"></i>';
      } else {
        // Jika darkmode tidak aktif, buat localStorage baru dan ubah ikon toggle menjadi moon
        localStorage.setItem("darkmode", false);
        document.body.dataset.theme = "light";
        toggle.innerHTML = '<i class="fas fa-moon"></i>';
      }
      toggle.addEventListener("click", () => {
        // Beralih antara mode terang dan gelap
        const isDark = localStorage.getItem("darkmode") === "true";
        localStorage.setItem("darkmode", !isDark);
        document.body.dataset.theme = isDark ? "light" : "dark";
        toggle.innerHTML = isDark ? '<i class="fas fa-moon"></i>' : '<i class="fas fa-sun"></i>';
      });

  </script>
